<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:id="@+id/lin"
    android:background="@drawable/whiterect">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
            android:text="Name "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/name"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Class "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/Class"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Father "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/father"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Admission No."
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/admission"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Date "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/date"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Month "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/month"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Amount "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/amount"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Sesson "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/session"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Submit By"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/submitby"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="Updated By "
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/updatedby"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/share"
        android:background="@drawable/whiterect"
        android:text="Share"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="34dp"/>
</LinearLayout>