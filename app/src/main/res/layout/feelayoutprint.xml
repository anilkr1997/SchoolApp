<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/prinlayout"
        android:layout_width="350dp"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:background="@drawable/feebackground"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/schoolname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:gravity="center"
            android:text="Delhi Public School"
            android:textColor="@color/feecolor"
            android:textStyle="bold"></TextView>
<ImageView
    android:layout_width="120dp"
    android:layout_height="120dp"
    android:src="@mipmap/ic_launcher"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="20dp"></ImageView>


        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_weight=".4"
                android:text="Admission "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/admission"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:text="2000"
                android:layout_height="wrap_content"

                android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Name "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:text="ABC"
                android:textColor="@color/black"/>

        </LinearLayout>


        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Father "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/father"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:text="Xyz"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight=".4"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Class "
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/Class"
                android:layout_width="0dp"
                android:layout_weight=".6"
                android:layout_height="wrap_content"
                android:text="10th"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_weight=".4"
            android:text="Amount"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/amount"
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:text="2000"
            android:layout_height="wrap_content"

            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
           android:layout_weight=".4"
            android:text="Date of fee"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/dof"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:text="24.5.2019"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Fee Type"
            android:layout_weight=".4"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/feetype"
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="wrap_content"
            android:text="Annual"
            android:textColor="@color/black"/>

    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/print"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/feebackground"
        android:text="Print"></Button>
    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/feebackground"
        android:text="Share"></Button>
</LinearLayout>

</LinearLayout>